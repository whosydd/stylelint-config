{
  "name": "stylelint-config",
  "displayName": "StylelintConfig for VS Code",
  "description": "Generate .stylelintrc.js & .stylelintignore in the workspace",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "activationEvents": [
    "onCommand:stylelint-config"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stylelint-config",
        "category": "StylelintConfig",
        "title": "Generate .stylelintrc"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "stylelint-config",
          "when": "explorerResourceIsFolder",
          "group": "EditorConfig@3"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "stylelint-config",
      "properties": {
        "stylelint-config.gist": {
          "type": "object",
          "required": [
            "configUrl"
          ],
          "items": {
            "type": "string"
          },
          "description": "Sync configuration files from gist."
        },
        "stylelint-config.tip": {
          "type": "boolean",
          "default": true,
          "description": "Toggle whether to display the prompt to install dependencies."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "prettier": "^2.3.2",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "publisher": "whosydd",
  "repository": {
    "type": "git",
    "url": "https://github.com/whosydd/stylelint-config.git"
  },
  "icon": "icon.png",
  "keywords": [
    "stylelint-config"
  ],
  "extensionDependencies": [
    "stylelint.vscode-stylelint"
  ]
}
